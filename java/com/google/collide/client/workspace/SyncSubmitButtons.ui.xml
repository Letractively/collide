<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
  <ui:with field="css"
    type="com.google.collide.client.workspace.SyncSubmitButtons.Css" />

  <div ui:field="container" class="{css.base}">
    <div ui:field="slider" class="{css.slider}"><div class="{css.arrow}"></div></div>
    <div class="{css.firefoxWrapper}">
      <div ui:field="buttonContainer" class="{css.buttonContainer}">
        <div ui:field="sync" class="{css.sync}">Sync</div>
        <div ui:field="submit" class="{css.submit}">Submit</div>
      </div>  
    </div>
  </div>
</ui:UiBinder>
